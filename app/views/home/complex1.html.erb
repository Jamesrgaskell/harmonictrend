<%= form_tag complex1_path, method: :get do %>
    <%=text_field_tag :val1 %>
     +
    <%=text_field_tag :val2 %>
     -
    <%=text_field_tag :val3 %>
     *
    <%=text_field_tag :val4 %>
     +
    <%=text_field_tag :val5 %>
     -
    <%=text_field_tag :val6 %>

    <%= submit_tag "Submit", name: nil %>

    <h2><%= @val1 %></h2>
    +
    <h2><%= @val2 %></h2>
    -
    <h2><%= @val3 %></h2>
    *
    <h2><%= @val4 %></h2>
    +
    <h2><%= @val5 %></h2>
    -
    <h2><%= @val6 %></h2>
    =
    <h1><%= (@val1 + @val2 - @val3) * (@val4 + @val5 - @val6) %></h1>
